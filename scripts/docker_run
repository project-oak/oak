#!/usr/bin/env bash

# Usage: docker_run [OPTIONS] COMMAND
# 
# Options:
#    --detach    Run container in background and print container ID

set -o errexit
set -o xtrace

readonly COMMIT_ID="${TRAVIS_COMMIT:-$(git rev-parse HEAD)}"

readonly DOCKER_IMAGE_BASE='gcr.io/oak-ci/oak'
readonly DOCKER_IMAGE_LATEST="$DOCKER_IMAGE_BASE:latest"
readonly DOCKER_IMAGE_COMMIT="$DOCKER_IMAGE_BASE:$COMMIT_ID"

# The default user for a Docker container has uid 0 (root). To avoid creating
# root-owned files in the build directory we tell Docker to use the current user
# ID, if known.
# See
# https://github.com/googleapis/google-cloud-cpp/blob/a186208b79d900b4ec71c6f9df3acf7638f01dc6/ci/kokoro/docker/build.sh#L147-L152
readonly DOCKER_UID="${UID:-0}"
readonly DOCKER_GID="${GID:-0}"
readonly DOCKER_USER="${USER:-root}"

mkdir -p './bazel-cache'
mkdir -p './cargo-cache'

docker pull "$DOCKER_IMAGE_LATEST" || true
docker pull "$DOCKER_IMAGE_COMMIT" || true

docker build \
  --cache-from="$DOCKER_IMAGE_LATEST" \
  --cache-from="$DOCKER_IMAGE_COMMIT" \
  --tag="$DOCKER_IMAGE_LATEST" \
  --tag="$DOCKER_IMAGE_COMMIT" \
  . 1>&2

# Try to push the image to the repository. This only works if the user has write
# access to the `oak-ci` Google Container Registry (GCR), therefore we ignore
# any failures.
# https://pantheon.corp.google.com/gcr/images/oak-ci/GLOBAL/oak
# In order to authenticate Docker against GCR, run the following commands:
# gcloud auth login
# gcloud auth configure-docker
docker push "$DOCKER_IMAGE_LATEST" || true
docker push "$DOCKER_IMAGE_COMMIT" || true

docker_run_flags=(
  "--interactive"
  "--tty"
  "--user=$DOCKER_UID:$DOCKER_GID"
  "--env=USER=$DOCKER_USER"
  "--volume=$PWD/bazel-cache:/.cache/bazel"
  "--volume=$PWD/cargo-cache:/usr/local/cargo/registry"
  "--volume=$PWD:/opt/my-project"
  "--workdir=/opt/my-project"
  "--network=host"
)

if [[ "$1" == "--detach" ]]; then
  docker_run_flags+=("--detach")
  docker run "${docker_run_flags[@]}" "$DOCKER_IMAGE_COMMIT" "${@:2}"
else
  docker run "${docker_run_flags[@]}" "$DOCKER_IMAGE_COMMIT" "$@"
fi

