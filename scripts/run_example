#!/usr/bin/env bash
set -o errexit
set -o xtrace

IS_CPP=false
USE_INSECURE_CHANNEL=false

while getopts "hci" opt; do
    case "$opt" in
    h)
        echo -e "Usage: $0 [-c] example_name
  -c    Run the C++ version of the example
  -i    Use a insecure channel to connect to Oak App (useful for development)    
  -h    Print this message"
        exit 0
        ;;
    i)
        echo "Using insecure channel to connect"
        USE_INSECURE_CHANNEL=true
        ;;
    c)
        echo "Running Node in C++ mode"
        IS_CPP=true
        ;;
    *)
        exit 1
        ;;
    esac
done

readonly NAME="${*:$OPTIND:1}"
if [[ -z "${NAME}" ]]; then
  echo "Missing example name, use -h for help"
  exit 1
fi

readonly OAK_MANAGER_ADDRESS="${OAK_MANAGER_ADDRESS:-127.0.0.1:8888}"
readonly SCRIPTS_DIR="$(dirname "$0")"

"$SCRIPTS_DIR/build_example" "$NAME"

if [ "$IS_CPP" = true ]; then
  readonly MODULE_PATH="$PWD/module-bin/examples/${NAME}/module/cpp/${NAME}.wasm"
else
  readonly MODULE_PATH="$PWD/examples/target/wasm32-unknown-unknown/release/${NAME}.wasm"
fi

"./client-bin/examples/${NAME}/client/client" \
  --manager_address="${OAK_MANAGER_ADDRESS}" \
  --module="${MODULE_PATH}" \
  --insecure_channel="${USE_INSECURE_CHANNEL}"
